{
    "name": "slothsoft/mtg",
    "description": "A Farah module that contains the content of mtg.slothsoft.net.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Daniel Schulz",
            "email": "info.slothsoft@gmail.com"
        }
    ],
    "type": "library",
    "require": {
        "php": "^7.2",
        "slothsoft/chat": "^1.0",
        "slothsoft/core": "^1.0",
        "slothsoft/farah": "^1.0",
        "slothsoft/w3c": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-0": {
            "Slothsoft\\MTG\\": "src/"
        },
        "files": [
            "src/registerModule.php"
        ]
    },
    "keywords": [
        "slothsoft",
        "farah-module",
        "docs"
    ],
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "classmap-authoritative": false,
    "minimum-stability": "dev",
    "prefer-stable": true
}
